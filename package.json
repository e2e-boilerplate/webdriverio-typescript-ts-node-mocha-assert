{
  "name": "webdriverio-typescript-ts-node-mocha-chai-assert",
  "version": "1.0.0",
  "description": "WebdriverIO end-to-end test automation boilerplate project. Using TypeScript, ES6 modules, ts-node, Mocha, Chai and Assert",
  "scripts": {
    "pretty": "npx prettier --no-config './spec/*.ts' --write",
    "lint": "npx tslint -c tslint.json './spec/*.ts'",
    "test": "npx wdio"
  },
  "keywords": [
    "webdriverio",
    "typescript",
    "es6",
    "ts-node",
    "mocha",
    "e2e",
    "boilerplate",
    "example",
    "e2e test"
  ],
  "author": "Girma Nigusse",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "7.0.1",
    "@types/node": "12.12.28",
    "@wdio/cli": "5.18.7",
    "@wdio/dot-reporter": "5.18.6",
    "@wdio/local-runner": "5.18.7",
    "@wdio/mocha-framework": "5.18.7",
    "@wdio/sync": "5.18.7",
    "chromedriver": "79.0.3",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "mocha": "7.1.0",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "ts-node": "8.6.2",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.8.2",
    "wdio-chromedriver-service": "5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
